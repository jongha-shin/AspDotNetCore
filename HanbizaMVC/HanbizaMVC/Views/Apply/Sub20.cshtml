@{
    ViewData["Title"] = "OT신청";
}
@model List<AddTimeList>
<style>
    .table-hover > tbody > tr {
        cursor: pointer
    }

    table {
        font-size: small;
    }

        table > thead > tr > th {
            background-color: #3763ab;
            color: white;
        }

    .nav-tabs .nav-link.active {
        font-weight: bold;
        color: #214085
    }

    .nav-tabs .nav-link {
        color: grey;
    }

    label {
        font-weight: bold
    }

    .linePerWord {
        word-break: keep-all;
    }

    .approval_input {
        text-align: center;
        cursor: pointer;
        width: inherit;
        padding: 0px
    }
