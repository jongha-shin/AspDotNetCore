@model dynamic
@{
    ViewData["Title"] = "근태 보기";
    string a = "";
}
<style>
    table {
        font-size: small;
    }

        table > thead > tr > th {
            background-color: #3763ab;
            color: white;
        }

    .nav-tabs .nav-link.active {
        font-weight: bold;
        color: #214085
    }
    .nav-tabs .nav-link {
        color: grey;
    }
</style>
<div class="text-center col-12 col-sm-8 offset-sm-2 p-2 mb-4" style="background-color:white">
    <ul class="nav nav-tabs mb-3" id="pills-tab" role="tablist" style="font-size:small;">
        <li class="nav-item">
            <a class="nav-link" href="/Record/Sub10/@ViewBag.선택월" aria-selected="true">월별근태내역</a>
        </li>
        <li class="nav-item">
            <a class="nav-link  active" href="/Record/Sub10_1_1" aria-selected="false">출퇴근기록</a>
        </li>
        <ul class="nav justify-content-end" style="font-size:small; position:absolute; right:0px; top: 11px;">
            <a href="#" id="prevBtn" onclick="changeMonth('-')"><img src="~/img/search-prev.png" style="width:13px; height:20px; margin:5px" /></a>
            <span id="SelectedMonth" style="margin:5px">@ViewBag.선택월</span>
            <a href="#" id="nextBtn" onclick="changeMonth('+')"><img src="~/img/search-next.png" style="width:13px; height:20px; margin:5px" /></a>
        </ul>
    </ul>
    
    <div class="tab-content" id="pills-tabContent">
        <div class="tab-pane fade show active" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
            <div class="table-responsive">
                <table class="table-sm table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th width="25%">날짜</th>
                            <th width="35%">출근</th>
                            <th width="35%">퇴근</th>
                        </tr>
                    </thead>
                    <tbody>
                       @for (int i = 1; i <= ViewBag.선택일끝; i++)
                       {
                           if (i < 10) { a = "0" + i; }
                           else { a = "" + i; }
                        <tr class="@ViewBag.선택월-@a">
                            <td>@ViewBag.선택월-@a</td>
                            <td></td>
                            <td></td>
                        </tr>
                       }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    let goPage = false;
    $(function () {
        let today = $("#SelectedMonth").text();
        //console.log("1: " + today);

        getWorkTime(today);
        
    });

    function getWorkTime(today) {
        //console.log(today);
        $.ajax({
            url: "/Record/GetWorkTime/" + today,
            type: "GET",
            contentType: "application/x-www-form-urlencoded; charset=utf-8",
            dataType: "json",
            success: function (result) {
                var sjson = JSON.parse(result);
                
                if (sjson.length != 0) {
                    //alert(goPage);
                    for (var i = 0; i < sjson.length; i++) {
                        var startTime = ""; 
                        var endTime = "";
                        //console.log(sjson[i].PkDay.substring(0, 10));
                        var month = sjson[i].PkDay.substring(0, 10);
                        if (sjson[i].StartWork.length != 0) {
                            startTime = sjson[i].StartWork.substring(11, sjson[i].StartWork.length) + " (" + sjson[i].StartIP + ")"
                        }
                        if (sjson[i].EndWork.length != 0) {
                            endTime = sjson[i].EndWork.substring(11, sjson[i].EndWork.length) + " (" + sjson[i].EndIP + ")"
                        }
                        $("." + month + " td:nth-child(2)").text(startTime);
                        $("." + month + " td:nth-child(3)").text(endTime);
                    }
                    if (goPage === true) {
                        location.href = "/Record/Sub10_1_1/" + today;
                    }
                } else {
                    alert("데이터가 없습니다");
                    
                } 
            },
            error: function () {
                alert("ajax 실패");
            }
        });
    }

    function changeMonth(sign) {
        let dateMonth = $("#SelectedMonth").text();
        let year = parseInt(dateMonth.substring(0, 4));
        let month = parseInt(dateMonth.substring(5, 7));

        if (sign == '+') {
            if (month + 1 == 13) {
                month = 1;
                year = year + 1
            } else {
                month = month + 1;
            }
        }
        else {
            if (month - 1 == 0) {
                month = 12;
                year = year - 1
            } else {
                month = month - 1;
            }
        }
        month = month >= 10 ? month : '0' + month;
        dateMonth = year + "-" + month;
        //alert(dateMonth);
        goPage = true;
        getWorkTime(dateMonth);
        
    }
 
</script>
