            if (e.button === 0) {
                saveCanvas();
                e.preventDefault();
                ctx.beginPath();
                if ($("#signCheck").is(":checked"))isDraw = true;
            }
        });
        $('#the-canvas').on('mousemove', function (e) {
            var event = e.originalEvent;
            e.preventDefault();
            currP = { X: event.offsetX, Y: event.offsetY };
            if (isDraw) draw_line(currP);
            /*
            isDraw = true;
            */
        });
        $('#the-canvas').on('mouseup', function (e) {
            e.preventDefault();
            isDraw = false;
        });
