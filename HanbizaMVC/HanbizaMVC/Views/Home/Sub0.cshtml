@model List<공지사항>
@{
    ViewData["Title"] = "공지사항";
}
<style>
    table {
        font-size: small;
    }

        table > thead > tr > th {
            background-color: #3763ab;
            color: white;
        }
</style>
<div class="text-center col-12 col-sm-10 offset-sm-1 p-2" style="background-color:white">
    <div class="table-responsive">
        <table class="table-sm table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>제목</th>
                    <th>내용</th>
                    <th>등록일</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="3">공지 내용이 없습니다</td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td>@item.제목</td>
                            <td>@item.내용</td>
                            <td>@string.Format("{0:yyyy-MM-dd}", item.Regdate)</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>