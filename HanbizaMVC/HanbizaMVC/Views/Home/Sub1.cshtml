@using HanbizaMVC.ViewModel

@model List<출퇴근기록>

@{
    ViewData["Title"] = "근태 보기";
}


<div class="text-center">
    <div class="card shadow mb-4 col-lg-9 ">
        <div class="card-body">
            <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist" style="float:left">
                <li class="nav-item">
                    <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">월별근태내역</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">출퇴근기록</a>
                </li>
            </ul>
            <ul class="nav justify-content-end">
                @ViewBag.최근월
            </ul>
            <div class="tab-content" id="pills-tabContent">
                <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th colspan="2">근무/휴가</th>
                                    <th colspan="2">근무외시수</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>기준일</td>
                                    <td>@ViewBag.기준일</td>
                                    <td>총근로</td>
                                    <td>@ViewBag.총근로</td>
                                </tr>
                                <tr>
                                    <td>근무일</td>
                                    <td>@ViewBag.근무일</td>
                                    <td>소정근로</td>
                                    <td>@ViewBag.소정근로</td>
                                </tr>
                                <tr>
                                    <td>결근일</td>
                                    <td>@ViewBag.결근일</td>
                                    <td>근태조정</td>
                                    <td>@ViewBag.근태조정</td>
                                </tr>
                                <tr>
                                    <td>휴무일</td>
                                    <td>@ViewBag.휴무일</td>
                                    <td>초과근로</td>
                                    <td>@ViewBag.초과근로</td>
                                </tr>
                                <tr>
                                    <td>주휴일</td>
                                    <td>@ViewBag.주휴일</td>
                                    <td>연장근로</td>
                                    <td>@ViewBag.연장근로</td>
                                </tr>
                                <tr>
                                    <td>유급휴가</td>
                                    <td>@ViewBag.유급휴일</td>
                                    <td>야간근로</td>
                                    <td>@ViewBag.야간근로</td>
                                </tr>
                                <tr>
                                    <td>무급휴가</td>
                                    <td>@ViewBag.무급휴가휴일</td>
                                    <td>휴일근로</td>
                                    <td>@ViewBag.휴일근로</td>
                                </tr>
                                <tr>
                                    <td>유급주휴일</td>
                                    <td>@ViewBag.유급주휴일</td>
                                    <td>휴일연장</td>
                                    <td>@ViewBag.휴일연장</td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td>휴일야간</td>
                                    <td>@ViewBag.휴일야간</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>날짜</th>
                                    <th>출근</th>
                                    <th>퇴근</th>
                                    <th>총근로</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Count == 0)
                                {
                                    <tr>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var attend in Model)
                                    {
                                        <tr>
                                            <td>@attend.날짜</td>
                                            <td>@attend.출근</td>
                                            <td>@attend.퇴근</td>
                                            <td>@attend.총근로</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>