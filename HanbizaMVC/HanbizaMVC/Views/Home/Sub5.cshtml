@{
    ViewData["Title"] = "연차보기";
}
@model List<휴가대장>

<style>
    table > thead > tr > th {
        background-color: #3763ab;
        color: white;
    }

</style>

<div class="text-center container">
    <div class="card mb-4">
        <div class="card-body">
                <p class="text-right">회계년도 기준 업데이트: @ViewBag.Regdate</p>
                <table class="table table-bordered table-sm" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th width="33%">입사일</th>
                            <th width="34%">연차발생일</th>
                            <th width="33%">근속연수</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@ViewBag.입사일</td>
                            <td>@ViewBag.연차발생일</td>
                            <td>@ViewBag.근속연수</td>
                        </tr>
                    </tbody>
                    <thead>
                        <tr>
                            <th>발생연차</th>
                            <th>사용연차</th>
                            <th>잔여연차</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@ViewBag.발생연차</td>
                            <td>@ViewBag.사용연차</td>
                            <td>@ViewBag.잔여연차</td>
                        </tr>
                    </tbody>
                </table>
                
                <table class="table table-bordered table-sm">
                    <thead>
                        <tr>
                            <th width="33%">번호</th>
                            <th width="34%">이용일</th>
                            <th width="33%">반차</th>
                        </tr>
                    </thead>
                    @if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="3">휴가 기록이 없습니다</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.번호</td>
                                <td>@item.날짜.ToShortDateString()</td>
                                <td>@item.반차</td>
                            </tr>
                        }
                    }
                </table>
            
        </div>
    </div>
  

</div>
