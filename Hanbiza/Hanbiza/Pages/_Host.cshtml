@page "/"
@namespace Hanbiza.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hanbiza</title>
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="css/sb-admin-2.min.css" rel="stylesheet">

    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>
    <style>
        .bg-gradient-primary {
            background-color: #214085;
            background-image: linear-gradient(180deg,#214085 10%,#214085 100%);
            background-size: cover;
        }
    </style>
</head>
<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar" >

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="/Main">
                <img src="/img/logo_main.png" alt="한비자" />

            </a>

            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            <!-- Nav Item - Dashboard -->
            <li class="nav-item">
                <a class="nav-link" href="/Sub1">
                    <i class="fas fa-fw fa-user-check"></i>
                    <span>근태보기</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Sub2">
                    <i class="fas fa-fw fa-plus"></i>
                    <span>OT신청</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Sub3">
                    <i class="fas fa-fw fa-plane-departure"></i>
                    <span>휴가신청</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Sub4">
                    <i class="fas fa-fw fa-pen"></i>
                    <span>휴가결재</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Sub5">
                    <i class="fas fa-fw fa-calendar-alt"></i>
                    <span>연차보기</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Sub6">
                    <i class="fas fa-fw fa-coins"></i>
                    <span>급여명세서</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Sub7">
                    <i class="fas fa-fw fa-signature"></i>
                    <span>확인서명</span>
                </a>
            </li>
            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading">
                내 정보
            </div>
            <li class="nav-item">
                <a class="nav-link" href="/Sub8">
                    <i class="fas fa-fw fa-file-alt"></i>
                    <span>내문서</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Sub9">
                    <i class="fas fa-fw fa-key"></i>
                    <span>비밀번호변경</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Login">
                    <i class="fas fa-fw fa-sign-out-alt"></i>
                    <span>로그아웃</span>
                </a>
            </li>

            <!-- Sidebar Toggler (Sidebar) -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>

        </ul>
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">
                
                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                </nav>
                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <app>
                        <component type="typeof(App)" render-mode="ServerPrerendered" />
                    </app>

                </div>
                <!-- /.container-fluid -->
            </div>
            <!-- End of Main Content -->
            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Your Website 2019</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->
        </div>
        <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <script src="_framework/blazor.server.js"></script>
</body>
</html>
